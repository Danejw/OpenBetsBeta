@page "/subevent"
@using Radzen
@using Radzen.Blazor


<!--SubEvents-->
<div class="container-fluid">
    <div class="card">
      <div class="card-body">
        <h1 align="center">SubEvents</h1>

        <!--AddButton-->
    <div align="center">
        <RadzenButton 
            Click=@CreateAndAddSubEvent
            Text="Add New SubEvent" 
            ButtonStyle="ButtonStyle.Primary">
        </RadzenButton>       
    </div>

      </div>
    </div>


    <div class="card">
    <table class="table table-striped table-bordered">

        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>DateCreated</th>
                <th>ScheduledDate</th>
                <th>isDone</th>
            </tr>
        </thead>

        
        <tbody>
            @foreach (var sub in subEvents)
            {
                <tr>
                    <td>@sub.Id</td>
                    <td>@sub.Name</td>
                    <td>@sub.Description</td>
                    <td>@sub.CreateDateTime</td>
                    <td>@sub.ScheduledDateTime</td>
                    <td>@sub.IsDone</td>             
                </tr>
            }          
        </tbody>
        

    </table>
    </div>
</div>

