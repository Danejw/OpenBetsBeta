@page "/gauge"
@using Radzen
@using Radzen.Blazor

<!--Bets-->
<div class="container-fluid">
    
    <div class="card">
      <div class="card-body">
        <h1 align="center">Gauge</h1>

             <!--AddButton-->
    <div align="center">
        <button onclick="" type="button" class="btn btn-primary btn-lg">
            Place New Bet
        </button>
      </div>
    </div>

      
    </div>


    <div class="card">



        <div class="container">
            <div class="row align-items-start">

                <div class="col text-center">
                    <h3>Isreal Adesanya</h3>
                </div>

                <div class="col text-center">
                    <h1>UFC</h1>
                    <h2>271</h2>
                </div>
                    
                <div class="col text-center">
                    <h3>Robert Whittaker</h3>
                </div>

            </div>


            <div class="row align-items-middle">

                <div class="col text-center">                
                      <img src="https://ssl.gstatic.com/onebox/media/sports/photos/ufc/3051_Yo9nIA_96x96.png" class="rounded-circle" alt="...">
                </div>

                <div class="col">
                    <div class="text-center">
                        <RadzenArcGauge Style="width: 100%; height: 100%;">
                            <RadzenArcGaugeScale Step="20" Min="0" Max="100" MinorStep="2" Radius="1.5" TickPosition=@tickPosition Y="0.9" Margin="0" Fill="rgb(3, 148, 252)">
                                <RadzenArcGaugeScaleValue Value=@value ShowValue=@showValue Fill="rgb(249, 32, 99)">
                                    <Template Context="pointer">
                                        <h4>
                                            @pointer.Value <sup>%</sup>
                                        </h4>                                   
                                    </Template>
                                </RadzenArcGaugeScaleValue>
                            </RadzenArcGaugeScale>
                        </RadzenArcGauge>
                    </div>
                </div>
                         

                <div class="col text-center">
                      <img src="https://ssl.gstatic.com/onebox/media/sports/photos/ufc/2037_e8t4YA_96x96.png" class="rounded-circle" alt="...">
                </div>
            
            </div>


            <div class="row align-items-end">

                <div class="col text-center">
                  <h3>@value</h3>
                </div>

                <div class="col text-center"> 
                    <p>
                      <label><span class="d-block mt-3 mb-1">@value:@(InversePercent())</span><RadzenSlider Min="0" Max="100" @bind-Value=@value Style="width: 200px;" /></label>
                    </p>
                </div>

                <div class="col text-center">
                  <h3>@(InversePercent())</h3>
                </div>

          </div>
        </div>

    </div>
</div>

@code {
    bool showValue = false;
    double value = 50;
    double inverseValue = 0;
    IEnumerable<GaugeTickPosition> tickPositions = Enum.GetValues(typeof(GaugeTickPosition)).Cast<GaugeTickPosition>();
    GaugeTickPosition tickPosition = GaugeTickPosition.Outside;

    private double InversePercent()
    {
        return 100 - value;
    }
}

